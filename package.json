{
  "name": "Matterwiki",
  "version": "0.2.3",
  "description": "A simple and beautiful wiki for teams",
  "main": "index.js",
  "scripts": {
    "build": "cross-env NODE_ENV=production webpack --config ./webpack.config.prod.js --progress --profile --color",
    "dev": "node index.js",
    "dev-testing": "cross-env TESTING=true node index.js",
    "start": "npm run build && cross-env NODE_ENV=production node index.js",
    "testcafe": "testcafe chrome tests/e2e/tests/*.js --app \"npm run dev-testing\" --app-init-delay 10000",
    "test": "npm run build && npm run testcafe"
  },
  "bin": {
    "wiki": "./install.js"
  },
  "engines": {
    "node": "*"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Matterwiki/Matterwiki.git"
  },
  "author": "Nishant Arora (@nshntarora)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Matterwiki/Matterwiki/issues"
  },
  "homepage": "http://matterwiki.com",
  "dependencies": {
    "bcryptjs": "2.4.0",
    "body-parser": "^1.20.0",
    "bookshelf": "^1.2.0",
    "express": "^4.18.1",
    "jsonwebtoken": "^7.2.0",
    "knex": "0.21.21",
    "multer": "1.2.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router": "^6.3.0",
    "react-s-alert": "npm:react-s-alert-v3@^1.4.2",
    "react-s-alert-v3": "^1.4.2",
    "sqlite3": "^5.0.6",
    "whatwg-fetch": "2.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.17.10",
    "@babel/preset-react": "^7.16.7",
    "babel-loader": "^8.2.5",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "cross-env": "*",
    "react-hot-loader": "*",
    "terser-webpack-plugin": "^5.3.1",
    "testcafe": "*",
    "webpack": "^5.72.0",
    "webpack-cli": "^4.9.2",
    "webpack-dev-middleware": "^5.3.1",
    "webpack-dev-server": "*",
    "webpack-hot-middleware": "*"
  }
}
