{
  "name": "matterwiki",
  "version": "0.2.1",
  "description": "A simple and beautiful wiki for teams",
  "main": "index.js",
  "scripts": {
    "build": "cross-env NODE_ENV=production webpack -p --config ./webpack.config.prod.js --progress --profile --colors",
    "dev": "cross-env NODE_ENV=develop nodemon --config nodemon.json ./src/api/server.js",
    "dev:debug": "cross-env NODE_ENV=develop nodemon --config nodemon.json  --inspect=5858 ./src/api/server.js",
    "start": "npm run build && cross-env NODE_ENV=production node ./src/api/server.js",
    "db:migrate": "knex migrate:latest",
    "db:seed": "knex seed:run",
    "lint": "eslint ./src/**",
    "format": "prettier --write --jsx-bracket-same-line \"src/**/*.js\"",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "npm run lint",
      "npm run format",
      "git add"
    ]
  },
  "bin": {
    "wiki": "./install.js"
  },
  "engines": {
    "node": "^8.1.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Matterwiki/Matterwiki.git"
  },
  "author": "Krishna Gopinath (@krishnagopinath) and Nishant Arora (@nshntarora)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Matterwiki/Matterwiki/issues"
  },
  "homepage": "http://matterwiki.com",
  "dependencies": {
    "axios": "^0.16.1",
    "babel-polyfill": "^6.23.0",
    "bcryptjs": "2.4.0",
    "body-parser": "^1.17.2",
    "bookshelf": "^0.10.3",
    "classnames": "^2.2.5",
    "dotenv": "^4.0.0",
    "draft-js": "^0.10.0",
    "draftjs-utils": "^0.7.4",
    "express": "^4.15.3",
    "helmet": "^3.6.1",
    "jsonwebtoken": "^7.4.1",
    "knex": "^0.13.0",
    "multer": "1.2.1",
    "mysql": "^2.13.0",
    "react": "15.3.0",
    "react-bootstrap": "^0.30.10",
    "react-dom": "15.3.0",
    "react-icons": "^2.2.5",
    "react-router-bootstrap": "^0.24.2",
    "react-router-dom": "4.1.1",
    "react-s-alert": "1.2.2",
    "url-search-params-polyfill": "^2.0.0"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-core": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "babel-loader": "^7.0.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-preset-env": "^1.5.1",
    "babel-preset-react": "^6.24.1",
    "clean-webpack-plugin": "^0.1.16",
    "cross-env": "3.1.4",
    "css-loader": "^0.28.1",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^15.0.1",
    "eslint-config-prettier": "^2.3.0",
    "eslint-import-resolver-webpack": "^0.8.3",
    "eslint-plugin-import": "^2.6.1",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-prettier": "^2.1.2",
    "eslint-plugin-react": "^7.1.0",
    "file-loader": "^0.11.1",
    "html-webpack-plugin": "^2.28.0",
    "husky": "^0.14.2",
    "lint-staged": "^4.0.0",
    "nodemon": "^1.11.0",
    "prettier": "^1.5.2",
    "style-loader": "^0.17.0",
    "testcafe": "0.13.0",
    "url-loader": "^0.5.8",
    "webpack": "^2.6.1",
    "webpack-dev-middleware": "^1.10.2",
    "webpack-dev-server": "^2.4.5",
    "webpack-hot-middleware": "^2.18.0"
  }
}
