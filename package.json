{
  "name": "Matterwiki",
  "version": "0.2.1",
  "description": "A simple and beautiful wiki for teams",
  "main": "index.js",
  "scripts": {
    "build": "cross-env NODE_ENV=production webpack --progress --profile --colors --env prod",
    "dev": "node index.js",
    "dev-testing": "cross-env TESTING=true node index.js",
    "start": "npm run build && cross-env NODE_ENV=production node index.js",
    "testcafe": "testcafe chrome tests/e2e/tests/*.js --app \"npm run dev-testing\" --app-init-delay 10000",
    "test": "npm run build && npm run testcafe"
  },
  "bin": {
    "wiki": "./install.js"
  },
  "engines": {
    "node": "~0.12.0 || ^4.2.0 || ^6.5.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Matterwiki/Matterwiki.git"
  },
  "author": "Nishant Arora (@nshntarora)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Matterwiki/Matterwiki/issues"
  },
  "homepage": "http://matterwiki.com",
  "dependencies": {
    "bcryptjs": "2.4.0",
    "body-parser": "1.15.2",
    "bookshelf": "0.10.0",
    "classnames": "^2.2.5",
    "draft-js": "^0.10.0",
    "draftjs-utils": "^0.5.1",
    "express": "4.14.0",
    "jquery": "^3.2.1",
    "jsonwebtoken": "7.1.9",
    "knex": "0.11.10",
    "multer": "^1.3.0",
    "react": "^15.3.0",
    "react-bootstrap": "^0.30.7",
    "react-dom": "^15.3.0",
    "react-router": "2.8.1",
    "react-s-alert": "1.2.2",
    "sqlite3": "3.1.4",
    "whatwg-fetch": "2.0.1"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-core": "^6.24.1",
    "babel-loader": "^6.2.10",
    "babel-preset-env": "^1.4.0",
    "babel-preset-react": "^6.24.1",
    "cross-env": "3.1.4",
    "css-loader": "^0.28.0",
    "file-loader": "^0.11.1",
    "html-webpack-plugin": "^2.28.0",
    "react-hot-loader": "3.0.0-beta.6",
    "style-loader": "^0.16.1",
    "testcafe": "0.13.0",
    "url-loader": "^0.5.8",
    "webpack": "^2.2.0",
    "webpack-dev-middleware": "^1.9.0",
    "webpack-dev-server": "^2.2.0",
    "webpack-hot-middleware": "^2.15.0",
    "webpack-merge": "^4.1.0"
  }
}
